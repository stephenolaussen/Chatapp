<!DOCTYPE html>
<html lang="no">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Familieskatt - En enkel og morsom chatapp for familien">
    <meta name="theme-color" content="#667eea">
    <title>Familie chat</title>
    <link rel="manifest" href="/manifest.json">
    <link rel="icon" type="image/svg+xml" href="/icons/favicon.svg">
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
        background: #f5f5f7;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        color: #1d1d1f;
      }

      .container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
        max-width: 520px;
        width: 100%;
        border: 1px solid #e5e5e7;
      }

      h1 {
        text-align: center;
        color: #1d1d1f;
        margin-bottom: 0.5rem;
        font-size: 2.5rem;
        font-weight: 700;
        letter-spacing: -1px;
      }

      .subtitle {
        text-align: center;
        color: #86868b;
        margin-bottom: 2.5rem;
        font-size: 1.05rem;
        font-weight: 400;
      }

      .rooms-section {
        margin-bottom: 2rem;
      }

      .section-title {
        font-size: 1.1rem;
        font-weight: bold;
        color: #1d1d1f;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .rooms-list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .rooms-list a {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.2rem 1.8rem;
        background: #0071e3;
        color: white;
        text-decoration: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 113, 227, 0.15);
        border: none;
        font-weight: 500;
      }

      .rooms-list a:hover {
        opacity: 0.9;
        box-shadow: 0 4px 12px rgba(0, 113, 227, 0.25);
      }

      .rooms-list a:active {
        transform: translateY(-2px);
      }

      .rooms-list a strong {
        font-size: 1.1rem;
      }

      .rooms-list a .icon {
        font-size: 1.5rem;
      }

      .new-room-section {
        background: #f5f5f7;
        padding: 2rem;
        border-radius: 12px;
        margin-top: 2.5rem;
        border: 1px solid #e5e5e7;
      }

      .new-room-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .form-group label {
        font-weight: bold;
        color: #1d1d1f;
      }

      .form-group input {
        padding: 0.85rem 1.2rem;
        border: 1px solid #d5d5d7;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.2s;
        background: white;
      }

      .form-group input:focus {
        outline: none;
        border-color: #0071e3;
        box-shadow: 0 0 0 3px rgba(0, 113, 227, 0.1);
        background: white;
      }

      .form-group label input[type="checkbox"] {
        width: auto;
        margin-right: 0.5rem;
        cursor: pointer;
      }

      .form-group .checkbox-label {
        display: flex;
        align-items: center;
        cursor: pointer;
        font-weight: normal;
      }

      .form-buttons {
        display: flex;
        gap: 1rem;
      }

      .form-buttons button {
        flex: 1;
        padding: 0.9rem;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
      }

      .btn-create {
        background: #0071e3;
        color: white;
        box-shadow: 0 2px 8px rgba(0, 113, 227, 0.15);
      }

      .btn-create:hover {
        opacity: 0.9;
        box-shadow: 0 4px 12px rgba(0, 113, 227, 0.25);
      }

      .btn-cancel {
        background: #e8e8ed;
        color: #1d1d1f;
        transition: all 0.3s;
      }

      .btn-cancel:hover {
        background: #d5d5d7;
      }

      .empty-state {
        text-align: center;
        padding: 2rem 0;
        color: #86868b;
      }

      .empty-state i {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.5;
      }

      .version {
        text-align: center;
        color: #d5d5d7;
        font-size: 0.8rem;
        margin-top: 2rem;
      }

      @media (max-width: 600px) {
        .container {
          padding: 1.5rem;
        }

        h1 {
          font-size: 2rem;
        }

        .form-buttons {
          flex-direction: column;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>ðŸ’¬ Familie chat</h1>
      <p class="subtitle">En chatapp for fam Olaussen</p>

      <div class="rooms-section">
        <div class="section-title">
          <i class="fas fa-door-open"></i>
          Velg et rom:
        </div>
        
        <%if (rooms && rooms.length > 0) { %>
          <ul class="rooms-list">
            <%rooms.forEach(function(room){ %>
              <a href="/<%-room%>">
                <strong><%- room %></strong>
                <span class="icon">â†’</span>
              </a>
            <% }); %>
          </ul>
        <% } else { %>
          <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <p>Ingen rom funnet. Opprett et nytt!</p>
          </div>
        <% } %>
      </div>

      <div class="new-room-section">
        <div class="section-title">
          <i class="fas fa-plus-circle"></i>
          Opprett nytt rom:
        </div>
        <form class="new-room-form" id="newRoomForm">
          <div class="form-group">
            <input 
              type="text" 
              id="roomName" 
              placeholder="Skriv inn navn pÃ¥ rommet..." 
              required
              autocomplete="off"
            />
          </div>
          <div class="form-group">
            <label class="checkbox-label">
              <input type="checkbox" id="saveRoom" />
              <span>Lagre rommet permanent</span>
            </label>
          </div>
          <div class="form-buttons">
            <button type="submit" class="btn-create">
              <i class="fas fa-plus"></i> Opprett
            </button>
            <button type="reset" class="btn-cancel">
              <i class="fas fa-times"></i> TÃ¸m
            </button>
          </div>
        </form>
      </div>

      <div class="version" id="version"></div>
    </div>

    <script>
      // Register service worker and check for updates
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/sw.js').then(registration => {
          // Check for updates every 30 seconds
          setInterval(() => {
            registration.update().catch(err => console.log('Update check failed:', err));
          }, 30000);

          // Listen for service worker updates
          registration.addEventListener('updatefound', () => {
            const newWorker = registration.installing;
            newWorker.addEventListener('statechange', () => {
              if (newWorker.state === 'installed' && navigator.serviceWorker.controller) {
                // Show update prompt
                if (confirm('ðŸ”„ En ny versjon av appen er tilgjengelig! Vil du oppdatere nÃ¥?')) {
                  newWorker.postMessage({ type: 'SKIP_WAITING' });
                  window.location.reload();
                }
              }
            });
          });
        }).catch(err => console.log('SW registration failed:', err));
      }

      const form = document.getElementById('newRoomForm');
      const roomNameInput = document.getElementById('roomName');
      const saveRoomCheckbox = document.getElementById('saveRoom');
      const versionDiv = document.getElementById('version');

      // Display version
      fetch('/version')
        .then(res => res.json())
        .then(data => {
          versionDiv.textContent = `v${data.version}`;
        })
        .catch(() => {
          versionDiv.textContent = 'v1.0.0';
        });

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const roomName = roomNameInput.value.trim();
        if (!roomName) {
          alert('Vennligst skriv inn et navn pÃ¥ rommet');
          return;
        }

        try {
          const response = await fetch('/newroom', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              room: roomName,
              save: saveRoomCheckbox.checked
            })
          });

          const data = await response.json();
          
          if (data.error) {
            alert('Rommet eksisterer allerede!');
          } else {
            window.location.href = '/' + data.room;
          }
        } catch (error) {
          console.error('Feil:', error);
          alert('Noe gikk galt, prÃ¸v igjen');
        }
      });
    </script>
  </body>
</html>
